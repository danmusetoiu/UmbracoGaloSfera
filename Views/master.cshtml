@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Extensions
@using Umbraco.Cms.Core.Security;
@inject IMemberManager _memberManager;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    // Get basic design settings from the homepage
    var home = (Home)Model.Root();
    var font =home.Font;
    var colorTheme = home.ColorTheme;
    string culoareText = ("Noutăți,Evenimente,Pagina de stiri,Fii voluntar!,Logare,Termene si conditii,Politica de confidentialitate si GDPR".Contains(Model.Name) ? "text-negru" : "text-alb");
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.Name - @home.Sitename</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
   
    <link rel="stylesheet" href="@Url.Content("~/css/umbraco-starterkit-style.css")" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/Layout.css">
    <link rel="stylesheet" href="~/css/@(Model.Name).css">
    <script type="text/javascript" src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script type="text/javascript">
        window.onload = function () {
            
            var map = L.map('dvMap').setView([44.505, 26.09], 8);

            
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
            }).addTo(map);

            
        };
    </script>


</head>

<body class="frontpage theme-font-@font theme-color-@colorTheme">


   
    <main>
    <header class="header">

        <div class="logo">
            @if (home.SiteLogo != null && !string.IsNullOrEmpty(home.SiteLogo.Url()))
            {
                <div class="nav-link--home">
                    <img class="logo-image" src="@home.SiteLogo.Url()" style="background-color:black !important" alt="@home.Sitename">
                </div>
            }
            else
            {
                <a class="nav-link nav-link--home nav-link--home__text logo-text" href="/">@home.Sitename</a>
            }
        </div>
        @if(!"Logare".Contains(Model.Name))
        {
        <nav class="nav-bar top-nav">
            @await Html.PartialAsync("~/Views/Partials/Navigation/TopNavigation.cshtml")
        </nav>
        }
        <div class="mobile-nav-handler">
            <div class="hamburger lines" id="toggle-nav">
                <span></span>
            </div>
        </div>

    </header>

    @if(Model.Name != "Logare")
        {
        <div class="right-menu">
            <div class="icon-button container-initiala-profil">
                    @{
                        var currentMember = await _memberManager.GetCurrentMemberAsync();
                    }
                    @if (currentMember is not null)
                    {
                        <span class="initiala-profil">@currentMember.Name.Substring(0,1)</span>
                    }
                    else
                    {
                        
                    }
             
            </div>
            <div class="top-icon @(Model.Name=="Home"?"v-hidden":"")">
                <div class="icon-circle">
                    <span class="icon"><a href="../">
                        <img src="/media/ftfn2ljm/icon-galosfera-circle.svg" alt="Galosfera" />
                        </a></span>
                </div>
            </div>

            <div class="icon-button @(Model.Name == "Contact"?"icon-albastru":"")">
                <span class="icon"><a href="/Contact"><img src="/media/rhhnndxi/mesaje2.svg" alt="Mesaje" /></a></span>
            </div>
            <div class="icon-button @(Model.Name == "Noutăți"?"icon-albastru":"")">
                <span class="icon"><a href="/Noutati"><img src="/media/vz4lddxh/stiri2.svg" alt="Știri" /></a></span>
            </div>
            <div class="icon-button @(Model.Name == "Pagina de stiri"?"icon-albastru":"")">
                <span class="icon"><a href="/Pagina-de-stiri"><img src="/media/vaahbacz/notificari2.svg" alt="Știri" /></a></span>
            </div>
            <div class="icon-button @(Model.Name == "Evenimente"?"icon-albastru":"")">
                <span class="icon"><a href="/Evenimente"><img src="/media/ja1d354d/calendar2.svg" alt="Calendar" /></a></span>
            </div>
        </div>
        }
        @RenderBody()
    </main>
    
    <footer class="footer-container-fixed-bottom ph-20px @culoareText @("Contact,Biblioteca".Contains(Model.Name)?"d-none":"")">
        <span class="ms-4">
            Contact 
            <a href="" class="logo-contact"><img src="/media/k5ejw3wk/fb1.svg" alt="Link facebook" /></a>
            <a href="" class="logo-contact"><img src="/media/f5qjtpld/ig1.svg" alt="Link instagram" /></a>
            <a href="" class="logo-contact"><img src="/media/4rmat0x1/wp1.svg" alt="Link whatsapp" /></a>
            <a href="" class="logo-contact"><img src="/media/qo4brthu/x1.svg" alt="Link X" /></a>
        </span>
        <span>
            TOATE DREPTURILE REZERVATE @home.FooterAddress.ToUpper()
        </span>
        <span class="me-4">
            <a href="../Termene-si-conditii" class="logo-contact text-nedecorat @culoareText"><img src="/media/gzell3g0/info1.svg" alt="Link Termene Și Condiții" class="me-2"/><span>Termene și condiții</span></a>
            
        </span>
    </footer>

    @* 
    Wish not to use JQuery?
    Insert this method call to load Umbraco Forms client dependencies without JQuery. @Html.RenderUmbracoFormDependencies()
    *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>	
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script src="@Url.Content("~/scripts/umbraco-starterkit-app.js")"></script>
   @*  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    *@ <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>

</html>
@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Extensions
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Products>

@{
    Layout = "master.cshtml";
}

@Html.Partial("~/Views/Partials/SectionHeader.cshtml")


<section class="section section--full-height background-image-full overlay  section--content-center "
         style="background-image: url('/media/1sjdebve/wall-profil-eveniment4.png?rmode=max&width=500&v=1dafdd00d589c09')">

    <div class="container">
        <div class="row position-absolute start-50">

          
            <div class="col-md-4">
               
                              
                    <form action="/action_page.php">
                        <div class="form-check form-switch">

                            <input class="form-check-input" type="checkbox" id="mySwitch" name="darkmode" value="yes" checked>
                            <label class="form-check-label" for="mySwitch">Notificări portal</label>
                       
                        </div>
                    <div class="form-check form-switch">

                        <input class="form-check-input" type="checkbox" id="mySwitch" name="darkmode" value="yes" checked>
                        <label class="form-check-label" for="mySwitch">Notificări email</label>

                    </div>
                        <button type="submit" class="btn btn-primary mt-3">Activează notificări</button>
                    </form>
                       
            </div>

            <div class="col-6 ">
               
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        
                    </div>
                    <div class="carousel-inner">
                        @if (Model.FeaturedProducts != null)
                        {
                            foreach (Product product in Model.Children<Product>())
                            {
                                <div class="carousel-item active">
                                   
                                    <img src="@product.Photos?.Url()" style="width:40%;height:40%" class="d-block w-100" alt=" @product.ProductName">
                                    
                                    <div class="carousel-caption d-none d-md-block">
                                        <a href="@product.Url()">
                                            <h5 style="background-color:black"><font color="white">@product.ProductName</font></h5>
                                        </a>
                                        
                                    </div>
                                
                                </div>
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div> 

    


        </div>
    </div>



</section>


